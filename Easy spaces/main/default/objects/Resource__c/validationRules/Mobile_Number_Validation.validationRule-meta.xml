<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_Number_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Mobile__c , &quot;\\D*?(\\d\\D*?){10}&quot;))</errorConditionFormula>
    <errorDisplayField>Mobile__c</errorDisplayField>
    <errorMessage>Mobile Number Should have only 10 digits</errorMessage>
</ValidationRule>
